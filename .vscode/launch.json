{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: writer agent",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "agents.writer.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "A2A_PUBLIC_URL": "http://127.0.0.1:8000"
      },
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Debug: reviewer agent",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "agents.reviewer.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8001"
      ],
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "A2A_PUBLIC_URL": "http://127.0.0.1:8001"
      },
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Debug: workflow",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/agents/workflow.py",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Debug: workflow (wait for agents)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/agents/workflow.py",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "preLaunchTask": "Wait for writer+reviewer APIs (healthz initialized)",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ],
  "compounds": [
    {
      "name": "Debug: agents + workflow",
      "configurations": [
        "Debug: writer agent",
        "Debug: reviewer agent",
        "Debug: workflow (wait for agents)"
      ],
      "stopAll": true
    }
  ]
}
